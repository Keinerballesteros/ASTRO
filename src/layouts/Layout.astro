
---
const { title } = Astro.props;
import { Icon } from 'astro-icon/components';
const products = [
	{
		icon: "",
		name: "Producto 1"
	},
	{
		icon: "",
		name: "Producto 2"
	},
	{
		icon: "",
		name: "Producto 3"
	}
	]
	---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="bg-zinc-800 text-zinc-200 " >
			<div class="container flex items-center">
				<img src="/public/logo.webp" class="h-[61px]" alt="logo_Alliexpress">
				<div class="relative w-3/6">
				<input placeholder="Buscar..." class="h-9 rounded-full pl-5 outline-none pr-10 text-black w-full"/>
					<div class="bg-zinc-800 right-1 top-[2px] absolute inline-block text-white rounded-2xl py-1 px-2">
					<Icon name="mdi:search" class="size-6"/>
					</div>
				</div>

				<div class="flex p-0 m-0 ml-9" >
					<Icon name="mdi:qrcode" class="size-8"/>
					<div class="text-xs ml-2" >
					<p>Descarga la app</p>
					<p> de AlliExpress</p>
					</div>
				</div>

				<div class="flex p-0 m-0 ml-9 ">
					<Icon name="mdi:cart" class="size-8"/>
					<div class="text-xs ml-1 relative flex-col" >
					<p class="ml-1 bg-white text-zinc-700 justify-center rounded items-center" >0</p>
					<b class="ml-2">cesta</b>
					</div>
					
				</div>
			</div>
		</div>
		<div class=" container banner">
			BANNER
		</div>
		<nav class="container main_menu">
			<a href="/">Inicio</a>  <a href="">Productos</a>
		</nav>
		<div class="container product_list">
			{
				products.map((product) => 	<div>
											<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><ellipse cx="12.07" cy="7" rx="3" ry="1.71"></ellipse><path d="M12.07 22c4.48 0 8-2.2 8-5V7c0-2.8-3.52-5-8-5s-8 2.2-8 5v10c0 2.8 3.51 5 8 5zm0-18c3.53 0 6 1.58 6 3a2 2 0 0 1-.29.87c-.68 1-2.53 2-5 2.12h-1.39C8.88 9.83 7 8.89 6.35 7.84a2.16 2.16 0 0 1-.28-.76V7c0-1.42 2.46-3 6-3z"></path></svg>
											{product.name}
											</div>)
			}
			
		</div>
		<div class="container categories">
			Categorias
		</div>
		<div class="container">

			<slot />
		</div>

		<div class="container footer">
			Este es el footer
		</div>
	</body>
</html>
<style is:global>
	.main_menu{
		display: flex;
		height: 40px;
		background-color: #f11805;
	}
	.main_menu a{
		transition: background 400ms ease-in-out;
		display: flex;
		align-items: center;
		height: 100%;
		text-decoration: none;
		color: white;
		font-weight: bold;
		padding: 0 12px;
	}
	.main_menu a:hover{
		background-color: #F0A202;
	}
	.banner{
		height: 240px;
		background-color: aqua;
	}
	.product_list{
		height: 80px;
		display: flex;
		margin-top: 6px;
	}
	.product_list div{
		height: 100%;
		display: flex;
		max-width: 180px;
		text-align: center;
		flex-direction: column;
		justify-content: center;
		border: 1px solid gray;
		border-radius: 6px;
		margin-right: 3px;
		align-items: center;
	}
	.categories{
		height: 80px;
	}
	.footer{
		height: 80px;
	}
	html, body {
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>

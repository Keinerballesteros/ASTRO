
---
const { title } = Astro.props;
import { Icon } from 'astro-icon/components';
const products = [
	{
		icon: "",
		name: "Producto 1"
	},
	{
		icon: "",
		name: "Producto 2"
	},
	{
		icon: "",
		name: "Producto 3"
	}
	]
	---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="bg-zinc-900 text-zinc-200 pb-2" >
			<div class=" flex items-center">
				<img src="/public/logo.webp" class="h-[61px] ml-10" alt="logo_Alliexpress">
				<div class="relative w-3/6">
				<input placeholder="Buscar..." class="h-9 rounded-full pl-5 outline-none pr-10 text-black w-full"/>
					<div class="bg-zinc-800 right-1 top-[2px] absolute inline-block text-white rounded-2xl py-1 px-2">
					<Icon name="mdi:search" class="size-6"/>
					</div>
				</div>

				<div class="flex p-0 m-0 ml-24" >
					<Icon name="mdi:qrcode" class="size-8"/>
					<div class="text-xs ml-2" >
					<p>Descarga la app</p>
					<p> de AlliExpress</p>
					</div>
				</div>

				<div class="flex p-0 m-0 ml-12 ">
					 <Icon name="mdi:cart" class="size-8"/>
					<div class="text-xs ml-1 relative flex-col" >
					<p class="ml-1 bg-white text-gray-950 justify-center rounded items-center" >0</p>
					<b class="ml-2">Cesta</b>
					</div>
				</div>

			</div>
		</div>
		<div class="bg-zinc-900 text-zinc-200 w-full h-10 pb-1" >
			<nav class="flex items-center">
				<div class="border rounded-full  h-9 ml-16 p-1 block">
					<li class="list-none p-1  hover:bg-white text-zinc-950 w-full" ><a>Todas las categorías</a>
						<li class="list-none  hover:text-black" style="display-none">
							<li><a href="#">Hogar y jardín</a></li>
							<li><a href="#">Cabello y Pelucas</a></li>
							<li><a href="#">Moda Hombre</a></li>
							<li><a href="#">Accesorios</a></li>
							<li><a href="#">Electrónica</a></li>
							<li><a href="#">Hogar e iluminación</a></li>
							<li><a href="#">Electrodomésticos</a></li>
							<li><a href="#">Motor</a></li>
							<li><a href="#">Bolsos y Maletas</a></li>
						</li>
					</li>
				</div>
				<div class="ml-7"> 
					<a href="#">NN</a>
					<a href="#">SuperVentas</a>
					<a href="#">Mejores Marcas</a>
					<a href="#">Hogar y jardín</a>
					<a href="#">Cabello y pelucas</a>
					<a href="#">Moda</a>
				</div>
				<div>
					<li>Más</li>
				</div>
			</nav>	
		</div>
		<div class=" container banner">
			BANNER
		</div>
		<nav class="container main_menu">
			<a href="/">Inicio</a>  <a href="">Productos</a>
		</nav>
		<div class="container product_list">
			{
				products.map((product) => 	<div>
											<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><ellipse cx="12.07" cy="7" rx="3" ry="1.71"></ellipse><path d="M12.07 22c4.48 0 8-2.2 8-5V7c0-2.8-3.52-5-8-5s-8 2.2-8 5v10c0 2.8 3.51 5 8 5zm0-18c3.53 0 6 1.58 6 3a2 2 0 0 1-.29.87c-.68 1-2.53 2-5 2.12h-1.39C8.88 9.83 7 8.89 6.35 7.84a2.16 2.16 0 0 1-.28-.76V7c0-1.42 2.46-3 6-3z"></path></svg>
											{product.name}
											</div>)
			}
			
		</div>
		<div class="container categories">
			Categorias
		</div>
		<div class="container">

			<slot />
		</div>

		<div class="container footer">
			Este es el footer
		</div>
	</body>
</html>
<style is:global>
	.footer{
		height: 80px;
	}
	html, body {
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
